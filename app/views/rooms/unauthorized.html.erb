<h4>Unauthorized Rooms : <%= @rooms.length %></h4>

	
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Rules</th>
      <th>Minimum days</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Is authorized</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <% if room.is_authorized == false %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.description %></td>
        <td><%= room.price %></td>
        <td><%= room.rules %></td>
        <td><%= room.minimum_days %></td>
        <td><%= room.address %></td>
        <td><%= room.latitude %></td>
        <td><%= room.longitude %></td>
        <td>
        <%= form_for(room) do |f| %>
         <%= f.check_box :is_authorized %>
         <%= f.submit "authorize room" %>
        <% end %>
        </td>
        <td><%= link_to 'Show', room %></td>
        <% if can? :update, room %>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <% end %>
        <% if can? :destroy, room %>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
